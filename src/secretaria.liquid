---
layout: default
title: "Secretaria paroquial"
---

<div class="container my-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/"><i class="fas fa-arrow-left me-1"></i>Home</a>
      </li>
    </ol>
  </nav>
</div>

<div class="container mt-5 pt-5">
  <h2 class="mb-4">Recados da Secretaria</h2>
  <div class="row">
    {% for recado in site.data.recados %}
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        {% if recado.imagem %}
          <img src="{{ recado.imagem }}" class="card-img-top" alt="{{ recado.titulo }}">
        {% endif %}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{ recado.titulo }}</h5>
          <button class="btn btn-outline-dark mt-auto" data-bs-toggle="modal" data-bs-target="#modalRecado{{ forloop.index }}">
            Leia mais
          </button>
        </div>
      </div>
    </div>

    <!-- Modal de Recado -->
    <div class="modal fade" id="modalRecado{{ forloop.index }}" tabindex="-1" aria-labelledby="modalLabel{{ forloop.index }}" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalLabel{{ forloop.index }}"> {{ recado.subtitulo }}</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <div>{{ recado.descricao }}</div>
            <p class="mt-4"><small>Publicado em: {{ recado.data }}</small></p>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
